<!doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class = "bg-red-100 flex justify-center items-center h-[600px]">
    <div id="main" class = "relative h-[500px] w-[400px] bg-white rounded-xl flex justify-center items-center flex-col">
        <h1 class = "font-bold text-4xl absolute top-[50px]">Login</h1>

        <div id="form" >
            <form action="/trans" id="loginBox" class = "flex flex-col" method="post">
                <input name="email" placeholder="Email" type="email" class="loginInput" />
                <input name="password" placeholder="Password" type="password" class="loginInput" />
                <button id="loginButton" class = "absolute h-8 w-32 bg-blue-500 bottom-24 rounded-xl" type="submit">Sign In</button>
        
                <button id="loginRegisterButton" class = "absolute h-8 w-44 bottom-12 m-2 text-sm" onclick="redirectToSignup(event)">Don't have a Account?</button>
              </form>
        </div>
    </div>
</body>

